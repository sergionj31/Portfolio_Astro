---
import Layout from "../layouts/Layout.astro";
import ProjectCardComponent from "../components/ProjectCardComponent.astro";
---

<Layout>
    <div class="relative text-white h-screen flex justify-around gap-84 bg-[url('/img/arbol.jpg')] bg-cover bg-center">

        <!-- Gradiente de transición hacia el fondo de la siguiente sección -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900"></div>
    
        <div class="relative mt-64 ml-4 md:ml-0">
            <h1 class="text-7xl font-bold mb-6">Mis Proyectos</h1>
        </div>

        <div></div>
    </div>

    <div class="flex flex-wrap justify-center gap-14 p-8">
        <ProjectCardComponent 
          title="MeetUp" 
          description="Red social de eventos con transiciones en Paypal y uso de la API de Google Maps. Funciones de seguimiento, comentarios, búsqueda, historial de eventos, etc. Con sistema de moderación de comentarios y muy atractiva visualmente."
          image="/img/projects/MeetUp.png" 
          link="http://sergionj31.pythonanywhere.com"
        />

        <ProjectCardComponent 
          title="NoNews" 
          description="Portal web de noticias creado en Astro. Uso de Content Collections consumiendo la API de NEWSAPI."
          image="/img/projects/NoNews.png" 
          link="https://no-news-ntz4cr4c0-sergios-projects-947d4005.vercel.app/" 
        />
    </div>
</Layout>